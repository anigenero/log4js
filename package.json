{
  "name": "log4js2",
  "version": "1.0.2",
  "scripts": {
    "build": "gulp package",
    "test": "gulp test"
  },
  "author": {
    "name": "Robin Schultz",
    "email": "robin@anigenero.com",
    "url": "http://anigenero.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anigenero/log4js2"
  },
  "license": "MIT",
  "main": "build/es5/log4js2.es5.min.js",
  "keywords": [
    "logger",
    "log4j",
    "log4j2",
    "log4js",
    "log",
    "console"
  ],
  "devDependencies": {
    "@types/core-js": "^0.9.46",
    "@types/jest": "^22.2.3",
    "@types/node": "^7.0.63",
    "assert": "^1.4.1",
    "babel-loader": "^6.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-runtime": "^5.1.10",
    "delete": "~0.3.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.3",
    "gulp-eslint": "^3.0.1",
    "gulp-jest": "^4.0.2",
    "gulp-minify": "0.0.14",
    "gulp-mocha": "^3.0.1",
    "gulp-prettydiff": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^3.2.4",
    "gulpclass": "^0.1.2",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "mocha": "^3.2.0",
    "run-sequence": "^1.2.2",
    "ts-jest": "^22.4.4",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.3",
    "webpack": "^2.4.1",
    "webpack-stream": "^3.2.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "orm/index.ts",
      "orm/entity/*",
      "/gulpfile.ts"
    ],
    "testMatch": [
      "**/__tests__/*.test.(t|j)s"
    ],
    "transform": {
      "^.+\\.(t|j)s?": "ts-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!typeorm)"
    ]
  }
}

{
    "compilerOptions": {
        "alwaysStrict": false,
        "baseUrl": "src",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitUseStrict": true,
        "outDir": "./build",
        "preserveConstEnums": true,
        "removeComments": true,
        "target": "es6",
        "sourceMap": true,
        "types": [
            "node",
            "core-js"
        ]
    },
    "files": [
        "src/index.ts"
    ]
}